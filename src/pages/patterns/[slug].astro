    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-2);
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
