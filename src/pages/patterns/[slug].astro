  }

  .metadata-row {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .metadata-footer {
    padding-top: 0.5rem;
    border-top: 1px solid var(--sl-color-gray-5);
    gap: 1rem;
  }

