    text-decoration: underline;
  }

  .info-section {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-top: 1.5rem;
  }

  .info-section h2 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

